{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node", "config": { "maxDuration": 30 } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "server.js" }, 
    { "src": "/(.*)", "dest": "/" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache" },
        { "key": "Content-Type", "value": "application/json" }
      ]
    }
  ]
}
